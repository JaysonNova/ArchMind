# 应用配置
NODE_ENV=development
PORT=3000
APP_URL=http://localhost:3000

# PostgreSQL 数据库
DATABASE_URL=postgresql://chenqi@localhost:5432/archmind
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# AI 模型 API Keys
ANTHROPIC_API_KEY=your_anthropic_api_key
OPENAI_API_KEY=your_openai_api_key
GOOGLE_API_KEY=your_google_api_key
GLM_API_KEY=your_glm_api_key
DASHSCOPE_API_KEY=your_dashscope_api_key
BAIDU_API_KEY=your_baidu_api_key
DEEPSEEK_API_KEY=your_deepseek_api_key

# Ollama 配置（本地模型）
OLLAMA_BASE_URL=http://localhost:11434

# API Key 加密密钥（用于加密用户配置的第三方 API Key）
# 生产环境必须设置为一个强随机字符串（至少 32 个字符）
API_KEY_ENCRYPTION_SECRET=your_secure_random_secret_key_at_least_32_chars

# 文件上传配置
MAX_FILE_SIZE=10485760

# RAG 配置
EMBEDDING_MODEL=text-embedding-3-small
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
TOP_K=5
SIMILARITY_THRESHOLD=0.7

# AI 生成配置
DEFAULT_MODEL=claude-3.5-sonnet
DEFAULT_TEMPERATURE=0.7
DEFAULT_MAX_TOKENS=8000

# 对象存储配置
# 可选值: minio (本地开发), huawei-obs (华为云生产环境)
STORAGE_PROVIDER=minio

# MinIO 配置 (本地开发)
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_USE_SSL=false
MINIO_BUCKET_DOCUMENTS=archmind-documents
MINIO_BUCKET_TEMP=archmind-temp
MINIO_BUCKET_BACKUPS=archmind-backups

# 华为云 OBS 配置 (生产环境)
# 华北-北京四区域: cn-north-4
# 华东-上海一区域: cn-east-3
# 华南-广州区域: cn-south-1
HUAWEI_OBS_REGION=cn-north-4
HUAWEI_OBS_ACCESS_KEY=your_huawei_obs_access_key
HUAWEI_OBS_SECRET_KEY=your_huawei_obs_secret_key
HUAWEI_OBS_BUCKET=archmind-documents

# 基础 URL
BASE_URL=http://localhost:3000
